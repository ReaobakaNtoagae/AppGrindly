<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pastelBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ===== Welcome Section ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_background"
                android:padding="12dp"
                app:tint="@color/pastelCardText"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey Alex! ðŸ‘‹"
                    android:fontFamily="@font/palanquin_dark_bold"
                    android:textColor="@color/pastelCardText"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/motivationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage your services with ease!"
                    android:textColor="@color/pastelCardText"
                    android:fontFamily="@font/palanquin_semibold"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <!-- Completed Services -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="6dp"
                    android:background="@drawable/rounded_card_purple">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_check"
                        app:tint="@color/pastelCardText"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed Services"
                        android:fontFamily="@font/palanquin_bold"
                        android:textSize="14sp"
                        android:textColor="@color/pastelCardText" />

                    <TextView
                        android:id="@+id/tvCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28"
                        android:fontFamily="@font/palanquin_semibold"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/pastelCardText" />
                </LinearLayout>

                <!-- Active Services -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="6dp"
                    android:background="@drawable/rounded_card_orange">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_work"
                        app:tint="@color/pastelCardText"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Services"
                        android:fontFamily="@font/palanquin_bold"
                        android:textSize="14sp"
                        android:textColor="@color/pastelCardText" />

                    <TextView
                        android:id="@+id/tvActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:fontFamily="@font/palanquin_semibold"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/pastelCardText" />
                </LinearLayout>

                <!-- Earnings -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="160dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:elevation="6dp"
                    android:background="@drawable/rounded_card_pink">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_money"
                        app:tint="@color/pastelCardText"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earnings"
                        android:fontFamily="@font/palanquin_bold"
                        android:textSize="14sp"
                        android:textColor="@color/pastelCardText" />

                    <TextView
                        android:id="@+id/tvEarnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R1,240"
                        android:fontFamily="@font/palanquin_semibold"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="@color/pastelCardText" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- ===== Unfinished Guides ===== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unfinished Guides ðŸ“‹"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/pastelCardText"
            android:layout_marginBottom="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/container"
            android:padding="16dp"
            android:elevation="6dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_document"
                app:tint="@color/pastelCardText"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car Wash Guide"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/palanquin_bold"
                    android:textColor="@color/pastelCardText" />


            </LinearLayout>

            <Button
                android:id="@+id/btnRecommended"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:fontFamily="@font/palanquin_dark_bold"
                android:text="Completed"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:cornerRadius="15dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <!-- Duplicate guide cards as needed -->
    </LinearLayout>
</ScrollView>
