<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TrackServiceFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/palanquin_dark_bold"
            android:text="Service Status Tracking"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On the Way "
                android:fontFamily="@font/palanquin_bold"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="40"
                android:max="100"
                android:progressTint="@android:color/holo_green_dark"
                android:backgroundTint="@android:color/darker_gray" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:src="@drawable/livetracking1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ETA: 16:05"
                android:fontFamily="@font/palanquin_bold"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:fontFamily="@font/palanquin_dark_bold"
                android:text="Cancel Service"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:cornerRadius="15dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />
        </LinearLayout>



    </LinearLayout>

</FrameLayout>