<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="24dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/welcomeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back ðŸ‘‹"
                        android:fontFamily="@font/palanquin_dark_bold"
                        android:textColor="@color/pastelCardText"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/motivationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage the platform with ease!"
                        android:textColor="@color/pastelCardText"
                        android:fontFamily="@font/palanquin_semibold"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="220dp"
                        android:layout_height="170dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/light_purple"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:tint="?android:textColorPrimary"
                                app:srcCompat="@android:drawable/ic_menu_myplaces" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Users"
                                android:fontFamily="@font/palanquin_bold"
                                android:textSize="16sp"
                                android:textColor="?android:textColorPrimary" />

                            <TextView
                                android:id="@+id/tvUsers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="124"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/palanquin_bold"
                                android:textColor="?android:textColorPrimary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Service Profiles -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="220dp"
                        android:layout_height="170dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/theme_pink"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:tint="?android:textColorPrimary"
                                app:srcCompat="@android:drawable/ic_menu_manage" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Service Profiles"
                                android:fontFamily="@font/palanquin_bold"
                                android:textSize="16sp"
                                android:textColor="?android:textColorPrimary" />

                            <TextView
                                android:id="@+id/tvServiceProfiles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="56"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/palanquin_bold"
                                android:textColor="?android:textColorPrimary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Requested Services -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="220dp"
                        android:layout_height="170dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="@color/light_orange"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:tint="?android:textColorPrimary"
                                app:srcCompat="@android:drawable/ic_menu_send" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Requested"
                                android:fontFamily="@font/palanquin_bold"
                                android:textSize="16sp"
                                android:textColor="?android:textColorPrimary" />

                            <TextView
                                android:id="@+id/tvRequested"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="34"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/palanquin_bold"
                                android:textColor="?android:textColorPrimary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Completed Services -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="220dp"
                        android:layout_height="170dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        android:backgroundTint="#80CBC4"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:tint="?android:textColorPrimary"
                                app:srcCompat="@android:drawable/ic_menu_agenda" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Completed"
                                android:textSize="16sp"
                                android:fontFamily="@font/palanquin_bold"
                                android:textColor="?android:textColorPrimary" />

                            <TextView
                                android:id="@+id/tvCompleted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/palanquin_bold"
                                android:textColor="?android:textColorPrimary" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/pastel_activity_bg"
            android:padding="16dp"
            android:elevation="6dp"
            android:clipToPadding="false"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/palanquin_bold"
                android:textColor="@color/pastelCardText"
                android:layout_marginBottom="12dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    app:tint="@color/pastelCardText"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JohnDoe signed up"
                    android:textSize="14sp"
                    android:fontFamily="@font/palanquin_semibold"
                    android:textColor="@color/pastelCardText" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_work"
                    app:tint="@color/pastelCardText"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service 'Car Wash' created"
                    android:textSize="14sp"
                    android:fontFamily="@font/palanquin_semibold"
                    android:textColor="@color/pastelCardText" />
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/pastelCardText"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account 'Jane123' deleted"
                    android:textSize="14sp"
                    android:fontFamily="@font/palanquin_semibold"
                    android:textColor="@color/pastelCardText" />
            </LinearLayout>
        </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>
