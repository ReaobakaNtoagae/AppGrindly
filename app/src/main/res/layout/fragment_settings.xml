<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/palanquin_dark_bold"
                android:text="Settings"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:textColor="@color/black"
                android:textSize="30sp" />



            <LinearLayout
                android:background="@drawable/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_margin="6dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/palanquin_dark_bold"
                android:text="Language Preferences"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_margin="10dp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/languageSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/languages"
                android:spinnerMode="dropdown"
                android:prompt="@string/language_prompt" />
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark_bold"
                    android:text="Notification Preferences"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_margin="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:layout_height="wrap_content">

                    <Switch
                        android:id="@+id/notificationSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Notifications"
                        android:textColor="@color/black"
                        android:padding="8dp"
                        android:fontFamily="@font/palanquin_bold"
                        android:checked="true" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/palanquin_dark_bold"
                    android:text="Authentication Preferences"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_margin="10dp" />

                <Switch
                    android:id="@+id/biometricsSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Biometric Authentication"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:fontFamily="@font/palanquin_bold"
                    android:checked="true" />

                <TextView
                    android:id="@+id/changePassowrd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/change_password"
                    android:fontFamily="@font/palanquin_bold"
                    android:textColor="@color/theme_purple" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_margin="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#F8F8F8"
                    android:src="@drawable/ic_logout"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/holo_red_dark"
                    android:fontFamily="@font/palanquin_dark_bold"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:fontFamily="@font/palanquin_dark_bold"
                android:gravity="center_horizontal"
                android:text="Delete Account"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:cornerRadius="15dp"
                android:layout_margin="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>



</FrameLayout>
